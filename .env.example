# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key

# Encryption Key for Bank Credentials
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate-a-key-using-the-command-above

# Application URL (used for magic links and OAuth callbacks)
APP_URL=http://localhost:5000

# Email Configuration
# Choose ONE of the following email providers:

# Option 1: Resend (Recommended - easiest setup, 3,000 emails/month free)
# Get API key from: https://resend.com/api-keys
# RESEND_API_KEY=re_your_api_key_here
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com
# MAIL_SENDER_NAME=LendifyMe

# Option 2: Mailgun (requires domain verification, can be complex)
# Get credentials from: https://app.mailgun.com/
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAIL_DEFAULT_SENDER=noreply@mg.yourdomain.com
# MAIL_SENDER_NAME=LendifyMe

# Option 3: SMTP (Gmail, Outlook, etc. - fallback if Resend/Mailgun not configured)
# For Gmail: Create app password at https://myaccount.google.com/apppasswords
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# Admin Email (receives support request notifications)
ADMIN_EMAIL=admin@example.com

# Stripe Configuration (for subscriptions)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products and prices in Stripe Dashboard)
# https://dashboard.stripe.com/products
STRIPE_PRICE_ID_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_ID_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_ID_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_ID_PRO_YEARLY=price_pro_yearly_id
